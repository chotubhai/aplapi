
	<body>
		<div class="join-container">
			<header class="join-header">
				<h1><i class="fas fa-smile"></i> ApnaIpl</h1>
			</header>
			<main class="join-main">
				<form action="/chat">
					<div class="form-control">
						<label for="username">Username</label>
